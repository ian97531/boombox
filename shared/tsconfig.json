{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"]
    },
    "outDir": "lib",
    "module": "commonjs",
    "target": "es2017",
    "lib": ["es2017", "dom"]
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ]
}
